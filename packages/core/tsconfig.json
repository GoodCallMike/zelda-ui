{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "strict": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/*.stories.*", "**/*.test.*"]
}
